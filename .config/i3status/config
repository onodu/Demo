general {
        colors = true
        interval = 5
}

order += "battery all"
order += "memory"
order += "cpu_usage"
order += "volume master"
order += "tztime local"

battery all {
        format = "%status %percentage %remaining"
}

memory {
        format = "%used/%total"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

cpu_usage {
    format = "CPU: %usage"
}

volume master {
        device = "default"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}
